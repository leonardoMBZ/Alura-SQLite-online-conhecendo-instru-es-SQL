-- ATIVIDADE 3

-- NOMEANDO AS COLUNAS DA TABELA FUNCIONARIOS1
SELECT 
NOME AS NOME_DE_CLIENTES,
CARGO AS SETOR_ONDE_TRABALHA,
DEPARTAMENTO AS AREA_ONDE_TRABALHA,
DATA_DE_CONTRATO AS QUANDO_INGRESSOU,
SALARIO AS QUANTO_RECEBE
FROM FUNCIONARIOS1;

-- DESSA FORMA, PODEMOS NOMEAR A TABELA DE FORMA QUE DE PARA O COLABORADOR VISUALIZE MELHOR AS 
-- INFORMAÇÕESFUNCIONARIOS1


-- ORDENANDO UMA TABELA E ATRIBUINDO UMA AREA DE BUSCA 

SELECT  * 
FROM FUNCIONARIOS1
WHERE DATA_DE_CONTRATO BETWEEN '1000' AND  DATA_DE_CONTRATO = '2000' 
AND SALARIO >='1000';
